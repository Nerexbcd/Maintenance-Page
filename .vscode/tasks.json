{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build tailwindcss",
            "type": "shell",
            "command": "npx tailwindcss -i ./input.css -o ./src/index.css --watch",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build tailwindcss for production",
            "type": "shell",
            "command": "npx tailwindcss -o build.css --minify"
        },
        {
            "label": "Build jekyll",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "problemMatcher": []
        },
        {
            "label": "Build & Watch jekyll (Auto Build)",
            "type": "shell",
            "command": "bundle exec jekyll build --watch",
            "problemMatcher": []
        }
    ]
}